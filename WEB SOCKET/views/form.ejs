
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
</head>

<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h1>ingrese un producto</h1>

            <br>

            <form action="/api/productos" method="post">

                <div class="form-group">
                    <label for="title"><b>Title</b></label>
                    <input id="title" class="form-control" type="text" name="title">
                </div>

                <div class="form-group">
                    <label for="price"><b>Price</b></label>
                    <input id="price" class="form-control" type="number" name="price">
                </div>

                <div class="form-group">
                    <label for="thumbnail"><b>Thumbnail</b></label>
                    <input id="thumbnail" class="form-control" type="text" name="thumbnail">
                </div>

                <button class="btn btn-success mt-3 mb-5">Enviar</button>
            </form>
        </div>
    </div>
    <main>
        <% if(prod.length > 0){ %>
            <section class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: yellow;"> <th>title</th> <th>price</th> <th>thumbnail</th> </tr>
                    <%prod.forEach(function(producto) {%>
                    <tr>
                        <td><%=producto.title%></td>
                        <td><%=producto.price%></td>
                        <td><img src="<%=producto.thumbnail%>" alt="<%=producto.title%>" style='height: 3rem;'</td>
                    </tr>
                    <%});%>
                </table>
            </section>
        <% } else{ %>
            <h3 class="alert alert-danger">no se encontraron datos</h3>
        <% } %>

        <!-- chat para clientes -->
        <%- include('index.html'); %>

</body>

</html>